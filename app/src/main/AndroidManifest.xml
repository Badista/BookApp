        <activity
            android:name=".ui.pdf.view.PdfEditActivity"
            android:exported="false" />
        <activity
            android:name=".ui.pdfAdmin.view.PdfListAdminActivity"
            android:exported="false" />
        <activity
            android:name=".ui.category.view.PdfAddActivity"
            android:exported="false" />
        <activity
            android:name=".ui.category.view.CategoryAddActivity"
            android:exported="false" />
        <activity
            android:name=".ui.dashboard.view.DashboardAdminActivity"
            android:exported="false" />
        <activity
            android:name=".ui.dashboard.view.DashboardUserActivity"
            android:exported="false" />
        <activity
            android:name=".ui.login.view.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.register.view.RegisterActivity"
            android:exported="false" />
        <activity
            android:name=".ui.splash.view.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.main.view.MainActivity"
            android:exported="false" />
    </application>

</manifest>